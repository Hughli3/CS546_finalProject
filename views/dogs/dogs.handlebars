<section class="section">
  <div class="container">
    <h1 class="mb-5">All dogs</h1>
    <div class="row">
      {{#each dogs}}
      <div class="col-md-3 mb-4">
          <div class="card">
              <a href="/dog/{{_id}}" >
                {{#if avatar}}
                <img src="{{ avatar }}" class="card-img-top" alt="Dog profile photo">
                {{else}}
                <img src="/public/img/avatar/default-dog.png" class="card-img-top" alt="Dog profile photo">
                {{/if}}
                <div class="card-body">
                    <h2 class="display-4">{{name}}</h2>
                    <p class="card-text">{{gender}} {{type}} {{age}} y/o</p>
                </div>
              </a>
          </div>
      </div>    
      {{/each}}
    </div>
    {{#pagination totalPage currentPage}}
    <nav>
      <ul class="pagination justify-content-center">
        {{#if @previousPage}}
        <li class="page-item">
          <a class="page-link" href="?page={{@previousPage}}">
            <i class="fa fa-angle-left"></i>
            <span class="sr-only ">Previous</span>
          </a>
        </li>
        {{/if}}
        
        {{#paginationItem totalPage currentPage}}
        <li class="page-item {{@active}}"><a class="page-link" href="?page={{@page}}">{{@page}}</a></li>
        {{/paginationItem}}

        {{#if @nextPage}}
        <li class="page-item">
          <a class="page-link" href="?page={{@nextPage}}">
            <i class="fa fa-angle-right"></i>
            <span class="sr-only">Next</span>
          </a>
        </li>
        {{/if}}
      </ul>
    </nav>
    {{/pagination}}
  </div>
</section>

