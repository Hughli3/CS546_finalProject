<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.js"></script>
<section class="section">
    <div class="container">
       
        <div class="row">
            <div class="col-4">
                <img src="/public/img/dog/1.jpg" class="card-img-top" alt="...">
            </div>
            <div class="col-8">
                <h2>{{ dog.dogName }}</h2>
                <h2>{{ dog.type }} {{ dog.gender }} 17</h2>

                <h2>Own by sadsad</h2>
                <h2>Health condition: good</h2>

            </div>
        </div>
       
    </div>
</section>

<section>
    <div class="container">
        <h1>Albumn</h1>

    </div>
</section>

<section>
    <div class="container">
        <h1>Health</h1>
        <div class="row">
            <canvas class="col-6" id="myChart1" ></canvas>
            <canvas class="col-6" id="myChart2" ></canvas>
        </div> 
    </div>
</section>


<section>
    <div class="container">
        <h1>Comment</h1>
        <form>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Write a large text here ..."></textarea>
        </form>
    </div>
</section>

<h1>{{ title }}</h1>
<main>
    <p>name: {{ dog.dogName }}</p>
    <p>gender: {{ dog.gender }}</p>
    
    <p>{{ dog.dateOfBirth }}</p>


    {{#each dog.heightWeight}}
        <p>date: {{this.date}}</p>
        <p>height: {{this.height}}</p>
        <p>weight: {{this.weight}}</p>
    {{/each}}
        
    {{#each comments}}
        <h1>Comment</h1>
        <p>{{content}}</p>
        <p>{{author}}</p>
    {{/each}}
</main>

<script src="/public/js/dogs.js"></script>

